{
    "name": "mecoSHARK",
    "author": "Fabian Trautsch",
    "version": "1.00",
    "plugin_type": "rev",
    "linux_libraries": [
    ],
    "description": "Calculates metrics and clones on revision level.",
    "requires": [
        {
            "name": "vcsSHARK",
            "operator": ">=",
            "version": "0.10"
        }
    ],
    "arguments": [
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "install",
            "description": "path to root folder of plugin"
        },
        {
            "name": "revision",
            "required": true,
            "position": 1,
            "type": "execute",
            "description": "revision hash that is processed"
        },
        {
            "name": "path",
            "required": true,
            "position": 2,
            "type": "execute",
            "description": "path to the project repository (revision must be set)"
        },
        {
            "name": "plugin_path",
            "required": true,
            "position": 3,
            "type": "execute",
            "description": "path to the root folder of the plugin"
        },
        {
            "name": "url",
            "required": true,
            "position": 4,
            "type": "execute",
            "description": "url of the project"
        },
        {
            "name": "db_user",
            "required": true,
            "position": 5,
            "type": "execute",
            "description": "database user for the mongodb"
        },
        {
            "name": "db_password",
            "required": true,
            "position": 6,
            "type": "execute",
            "description": "password for the user of the mongodb"
        },
        {
            "name": "db_database",
            "required": true,
            "position": 7,
            "type": "execute",
            "description": "name of the database in the mongodb"
        },
        {
            "name": "db_hostname",
            "required": true,
            "position": 8,
            "type": "execute",
            "description": "hostname of the server, where the mongodb runs on"
        },
        {
            "name": "db_port",
            "required": true,
            "position": 9,
            "type": "execute",
            "description": "port on which the mongodb is listening on"
        },
        {
            "name": "db_authentication",
            "required": true,
            "position": 10,
            "type": "execute",
            "description": "databse against which users are authenticated"
        },
        {
            "name": "options",
            "required": false,
            "position": 11,
            "type": "execute",
            "description": "possible options string"
        }
    ]
}